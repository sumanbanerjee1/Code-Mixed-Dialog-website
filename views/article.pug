extends layout

block title
  title DailyDialog++ - Multi-reference Adversarial Dataset for Dialog Evaluation

block description
  meta(name='description', content='DailyDialog++ is a Multi-reference Adversarial Dataset for Dialog Evaluation')

block extralinks
  link(rel='stylesheet', href='/stylesheets/article.css')

block extrascripts
  script(src='/javascripts/hilitorModified.js')
  script(src='/javascripts/removeStopWords.js')
  script(src='/javascripts/highlighting.js')
  script(src='/javascripts/evaluate.js')
  script(src='/javascripts/model.js')

block content
  .cover
    .container
      .row
        .col-md-12
          .infoCard
            .infoSubheadline.model-title-holder
              h1 Predictions
            .infoBody
              h1#title #{decodeURIComponent(title)}
              h2#subtitle DailyDialog++
              div         
                each paragraph in paragraphs
                  .para-wrap
                    .row
                      .col-md-6
                        pre !{paragraph.context.replace(/Speaker A:/g, "Speaker A:".bold()).replace(/Speaker B:/g, "Speaker B:".bold())}
                      .col-md-6
                        .qas-wrap
                          each response in paragraph.responses
                            .qa-wrap(data-id=response.id)
                              p 
                                strong.question #{response.text}
                              ul.list-unstyled
                                li
                                  p
                                    i Label: 
                                      span.answer #{response.label}
                                li.prediction-holder
                                  p
                                    i Prediction: 
                                    span.prediction
